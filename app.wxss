/**app.wxss**/

page {
  height: 100%;
  width: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.toast {
  text-align: center;
  position: fixed;
  z-index: 999999;
  top: 85%;
  filter: alpha(opacity=80);
  width: 100%;
}

.toast text {
  color: #fff;
  min-width: 100px;
  opacity: 0.5;
  border-radius: 25px;
  height: 40px;
  font-weight: 100;
  background-color: rgba(0, 0, 0, 0.85);
  line-height: 40px;
  text-align: center;
  padding: 5px 12px;
  font-size: 12px;
}

.pupop-view {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.pupop {
 width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;

}

.pupop-title {
  text-align: center;
  align-content: center;
  justify-content: space-between;
  margin-top: 15px;
  margin-bottom: 15px;
  font-size: 18px;
}

.pupop-content {
  font-size: 14px;
  text-align: center;
  align-content: center;
  justify-content: space-between;
  margin-bottom: 15px;
}

.bottom-nav{
    position:fixed;
    bottom:0px;
    width:100vw;
    padding:15px 0;
}
.bottom-nav .viewText{
   color:#fff;
}
.bottom-nav .navtext,.bottom-nav .viewText{
   float:left;
   height:25px;
   padding-left:4px;
   font-size:14px;
   line-height:25px;
}
.bottom-nav .on{
   color:#45daf8;
}
.bottom-nav .off{
   color:#818181;
}
.bottom-nav .ico-group {
   width:60px;
  height:25px;
  float:left;
  margin:10px;
  background-color:#45daf8;
  padding:0 10px;
  color:#fff;
  border-radius:4px;
}
.bottom-nav .ico-group.off{
  background-color:#818181;
}
.bottom-nav .headline{
 text-align:center;
 height:10px;
 padding-bottom:10px;
}
.bottom-nav .headline text{
    display: inline-block;
    position: relative;
    font-size:8px;

}
.bottom-nav .headline text:before {
    right: 100%;
    margin-right: 5px;
}
.bottom-nav .headline text:after {
    left: 100%;
    margin-left: 5px;
}
.bottom-nav .headline text:before,
.bottom-nav .headline text:after {
    content: "";
    position: absolute;
    height: 3px;
    border-bottom: 1px solid #E6E6E6;
    border-top: 1px solid #222;
    top: 5px;
    width: 100vw;
}
.bottom-nav .homepage, .bottom-nav .personal{
   width:48vw;
   float:left;
   text-align:center;
   display: flex;
   display: -webkit-box;
   display:-webkit-flex;
   align-items: center;
   justify-content: center;
   height:20px;
   margin-top:10px;
}
.bottom-nav .homepage{
   border-right:1px solid #6F7378;
}
.bottom-nav .homepage .homeIco,.bottom-nav .personal .personIco{
    width:18px;
    height:18px;
    float:left;
    padding-top:4px;
}
