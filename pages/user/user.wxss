/* pages/user/user.wxss */

page {
  background-image: url(https://www.kangaroo-book.com/img/tree.png);
  height: 100%;
  width: 100%;
  background-size: 100%;
  background-repeat: no-repeat;
}

.scroll-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  position: relative;
}

.user {
  width: 100%;
  height: 100%;
}

.borrow, .share {
  background-color: #29a840;
  border-radius: 40px;
  font-size: 25px;
  font-weight: 800;
  padding: 3px 20px;
  color: white;
  display: grid;
  /* margin: 15px 45px; */
}

.date, .baby, .address {
  color: #0b6836;
  font-size: 16px;
  margin-left: 5px;
  margin-right: 5px;
}

.head, .btn {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.btn {
  flex-basis: auto;
  display: grid;
  /* flex-direction: column; */
}

.head {
  margin-top: 7px;
}

.date {
  margin-right: 10px;
}

.item {
  background-repeat: no-repeat;
  display: flex;
  align-content: center;
  align-items: center;
  color: white;
  flex-direction: column;
  background-size: 100%;
  justify-content: space-between;
  text-align: center;
}

.item text {
  font-size: 14px;
  align-content: center;
  text-align: center;
  line-height: 18px;
}
